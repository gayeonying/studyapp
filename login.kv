<LoginLayout@BoxLayout>:
    orientation: "vertical"
    BoxLayout:
        size_hint_y: 0.1
        MDLabel:
            text: "LOGIN"
    BoxLayout:
        id: bx
        orientation: "vertical"
        size_hint_y: 0.1
        canvas.before:
            Color:
                rgba: utils.get_color_from_hex("#6633FF")
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: [0, 0, 30, 30]
    FloatLayout:
        id: circles
        orientation: "horizontal"
        
        Scatter:
            size_hint: None,None
            
            Widget:
                canvas.before:
                    Color:
                        rgba: utils.get_color_from_hex("#0000FF")
                    Ellipse:
                        pos: self.pos
        Scatter:
            size_hint: None,None
            Widget:
                canvas.before:
                    Color:
                        rgba: utils.get_color_from_hex("#7f00ff")
                    Ellipse:
                        pos: self.pos
        Scatter:
            size_hint: None, None
            Widget:
                canvas.before:
                    Color:
                        rgba: utils.get_color_from_hex("#00B7EB")
                    Ellipse:
                        pos: self.pos