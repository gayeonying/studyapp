#:kivy 1.11.1
<LoginScreen@Screen>:
    name: "login_screen"
    on_enter:
        app.animate_background(lla)
        app.animate_card(box_card)
    LoginLayout:
        id: lla
    MDCard:
        id: box_card
        orientation: "vertical"
        size_hint: [0.8, 0.6]
        pos_hint: {"center_x": 0.5, "center_y": 0}
        
        BoxLayout:
            padding: [15, 0, 15, 0]
            orientation: "vertical"
            MDLabel:
                text: "LOGIN PAGE"
                text_size: self.size
                font_size: 35
                bold: True
                halign: 'center'
                valign: 'middle'
    
            MDLabel:
                text: ""
                halign: "center"
                valign: "middle"
                bold: True
                color: utils.get_color_from_hex("#006233")
        
        MDTextField:
            id: name
            hint_text: "NAME"
            helper_text: "NAME"
            padding_x:[10,0]
            size_hint_x: 0.8
            pos_hint: {"center_x": 0.5}
        MDTextField:
            id: id
            hint_text: "ID"
            helper_text: "ID"
            size_hint_x: 0.8
            pos_hint: {"center_x": 0.5}
        MDTextField:
            id: passwd
            hint_text: "Password"
            helper_text: "Password"
            size_hint_x: 0.8
            pos_hint: {"center_x": 0.5}
            password: True
        BoxLayout:
            orientation: "vertical"
            MDFillRoundFlatButton:
                text: "LOGIN"
                bold: True
                size_hint_x: 0.8
                pos_hint: {"center_x": .5}
                on_release:
                    app.manage_screens("study_screen", "add")
                    app.change_screen("study_screen")

